<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.screens.mainscreen.MainActivity"
    android:orientation="vertical"
    android:weightSum="2"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4"
        >

        <TextView
            android:id="@+id/firstTxtView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            />

        <TextView
            android:id="@+id/secondTxtView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            />

        <TextView
            android:id="@+id/thirdTxtView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_dark"

            />

        <TextView
            android:id="@+id/fourthTxtView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_orange_light"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:weightSum="4"
        >

        <TextView
            android:id="@+id/row1TxtView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Row One"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/row2TxtView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Row Two"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/row3TxtView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Row Three"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/row4TxtView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Row Four"
            android:layout_weight="1"
            />

    </LinearLayout>
</LinearLayout>